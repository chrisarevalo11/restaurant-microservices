{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/restaurant/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/restaurant/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/restaurant",
  "projects": {
    "restaurant": {
      "type": "application",
      "root": "apps/restaurant",
      "entryFile": "main",
      "sourceRoot": "apps/restaurant/src",
      "compilerOptions": {
        "tsConfigPath": "apps/restaurant/tsconfig.app.json"
      }
    },
    "kitchen": {
      "type": "application",
      "root": "apps/kitchen",
      "entryFile": "main",
      "sourceRoot": "apps/kitchen/src",
      "compilerOptions": {
        "tsConfigPath": "apps/kitchen/tsconfig.app.json"
      }
    },
    "storage": {
      "type": "application",
      "root": "apps/storage",
      "entryFile": "main",
      "sourceRoot": "apps/storage/src",
      "compilerOptions": {
        "tsConfigPath": "apps/storage/tsconfig.app.json"
      }
    }
  }
}